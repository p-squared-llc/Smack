<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/userNameText"
            app:layout_constraintTop_toTopOf="@+id/userImage" app:layout_constraintStart_toEndOf="@+id/userImage"
            android:layout_marginStart="8dp" tools:text="Username"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/profiledefault"
            android:id="@+id/userImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/user_avatar"
            app:layout_constraintDimensionRatio="1:1"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateStampText"
            app:layout_constraintTop_toTopOf="@+id/userNameText" app:layout_constraintStart_toEndOf="@+id/userNameText"
            android:layout_marginStart="8dp" tools:text="Date Stamp in Zulu time"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userMessageText" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameText" app:layout_constraintStart_toEndOf="@+id/userImage"
            android:layout_marginStart="8dp" android:singleLine="false"
            tools:text="This is the user message that can be multiple lines and we want to see what a long text message will look like on this view so I am typing a whole lot.  And if I type even more will it go to the next line?"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>